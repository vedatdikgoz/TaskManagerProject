@model GorevViewModel
<!-- Main content -->
<section class="content">
    <br/>
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Tüm İşler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 30%">
                            İş Adı
                        </th>
                        <th>
                            Bitiş Tarihi
                        </th>
                        <th style="width: 10%" class="text-center">
                            Durum
                        </th>
                        <th style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var gorev in Model.Gorevler)
                    {
                    <tr>
                        <td>
                            <a>
                             @gorev.Name
                            </a>
                            <br />
                            <small>
                               Oluşturma tarihi: @gorev.CreatedDate.ToShortDateString()
                            </small>
                        </td>
                        <td>
                           @gorev.ExpiredDate
                        </td>
                        <td class="project-state">
                                @if (gorev.Status == "Başarısız")
                                {
                                 <span class="badge badge-danger">@gorev.Status</span>
                                }
                                else{
                                  <span class="badge badge-success">@gorev.Status</span>
                                }
                               
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-primary btn-sm" href="#">
                                <i class="fas fa-folder">
                                </i>
                                Detay
                            </a>
                            <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="UpdateTask" asp-route-id="@gorev.Id">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Düzenle
                            </a>
                            <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="DeleteTask" asp-route-id="@gorev.Id">
                                <i class="fas fa-trash">
                                </i>
                                Sil
                            </a>
                        </td>                       
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->