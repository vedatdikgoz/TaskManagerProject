@model GorevAddViewModel
<!-- Main content -->
<section class="content">
    <br/>
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">İş Ekle</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <form asp-controller="Home" asp-action="AddTask" method="post">
                <div class="form-group">
                    <label>İş Adı</label>
                    <input type="text" asp-for="Name" class="form-control">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <label>Durum</label>
                    <select asp-for="Status" class="form-control custom-select">
                        <option selected disabled>Seçiniz</option>
                        <option>Yeni</option>
                        <option>Başarısız</option>
                        <option>Başarılı</option>
                    </select>
                </div>
                 <div class="form-group">
                    <label>Oluşturma Tarihi</label>
                    <input type="datetime-local" asp-for="CreatedDate" class="form-control">
                </div>                
                <div class="form-group">
                    <label>Bitiş Tarihi</label>
                    <input type="datetime-local" asp-for="ExpiredDate" class="form-control">
                </div>
                <div class="form-group">                   
                    <button type="submit" class="btn btn-primary">Yeni İş Ekle</button>                 
                </div>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <div class="row">
        <div class="col-12">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </div>
</section>
<!-- /.content -->
